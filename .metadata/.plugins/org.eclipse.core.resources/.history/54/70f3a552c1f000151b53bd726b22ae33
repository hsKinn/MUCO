<script type="text/javascript">
$(document).ready(function() {
	$("#btnLogin").click(function(){
		var form = $("loginForm");
		form.attr("method", "post");
		form.attr("action", "<c:url value="/doLogin"/>")
		form.submit();
	});
});
</script>

