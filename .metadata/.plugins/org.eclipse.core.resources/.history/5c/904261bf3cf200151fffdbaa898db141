package com.ktds.muco.table.country.biz;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import com.ktds.muco.table.country.dao.CountryDAO;
import com.ktds.muco.table.country.vo.CountryVO;

/**
 * 
 * @author 김광민
 *
 */
public class CountryBiz {
	
	CountryDAO countryDAO;
	
	public CountryBiz() {
		countryDAO = new CountryDAO();
	}

	/**
	 * 선택한 나라가 DB에 존재하는지 확인
	 * 
	 * 존재하면 오른쪽 선택된 나라 리스트에 출력하고
	 * 존재하지 않으면 아무일도 일어나지 않음
	 * 
	 * @param request
	 * @return
	 * @author 김광민
	 */
	public CountryVO getCountryByCountryName(HttpServletRequest request) {

		// 선택된 나라를 받는다.
		String selectedCountry = request.getParameter("selectedCountry");
		
		CountryVO countryVO = countryDAO.getCountryByCountryName(selectedCountry);

		// 해당 나라가 DB에 존재하면
		if( countryVO != null ) {
			
			// 선택된 나라를 세션에 추가
			this.insertSelectedCountryToSession(request);
		}
		
		return	countryVO; 
	}

	/**
	 * 선택된 나라명칭 "_SELECTED_COUNTRY_"세션에 추가
	 * 
	 * @param selectedCountry
	 * @author 김광민
	 */
	private void insertSelectedCountryToSession(HttpServletRequest request) {
		
		HttpSession session = request.getSession();
		session.setAttribute("_SELECTED_COUNTRY_", arg1);
		
	}

}
